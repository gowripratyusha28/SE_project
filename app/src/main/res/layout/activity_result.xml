<?xml version="1.0" encoding="utf-8"?>
<!-- XML file to show the result of the algorithms -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEBE9">

    <!-- Linear layout to show the suggestions -->
    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".activities.ResultActivity">

        <!-- For suggestion 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="Suggestion 1:"
            android:textColor="#AD1457"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="The order of visit is: "
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/displayorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/totalcost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/totaltime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:background="#4e0d3a" />

        <!-- For suggestion 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="Suggestion 2:"
            android:textColor="#AD1457"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="The order of visit is: "
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/displayorder1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/totalcost1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/totaltime1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start journey"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="#FFFFFF"
            android:background="#4e0d3a"
            android:onClick="Click"/>

    </LinearLayout>
</ScrollView>